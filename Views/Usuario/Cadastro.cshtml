@model Usuario
@{
    ViewData["Title"] = "Cadastro de Usuários";
}

<h1 class="row justify-content-md-center">Cadastro de Usuário</h1>
<div class="row justify-content-md-center">
    <form asp-action="Cadastro" method="POST" class="col-md-4">
        <div class="form-group">
            <label asp-for="Nome" name="Nome" id="userNome">Nome</label>
            <input asp-for="Nome" class="form-control" placeholder="Digite seu nome" required>
        </div>
        <div class="form-group">
            <label asp-for="Login" name="Login" id="userLogin">Login</label>
            <input asp-for="Login" class="form-control" placeholder="Digite um login"  required>
        </div>
        <div class="form-group">
            <label asp-for="Senha" name="Senha" id="userSenha">Senha</label>
            <input type="Password" asp-for="Senha" class="form-control" placeholder="Digite uma senha"  required>
        </div>
        <select name="Tipo" id="userTipo">
            <option value="@Usuario.ADMIN">Administrador</option>
            <option value="@Usuario.PADRAO">Padrão</option>
        </select>
        <div class="button">
            <input type="submit" value="Cadastrar" class="btn btn-primary">
        </div>
    </form>
</div>