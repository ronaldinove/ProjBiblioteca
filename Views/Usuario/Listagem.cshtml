@model List<Usuario>
@{
    ViewData["Title"] = "Lista de Usuários";
}
<h1 class="row justify-content-md-center">Usuários Cadastrados no Sistema</h1>


<div class="row justify-content-md-center">
    <div class="col-md-12">
        <table class="table table-striped"> 

                <thead>
                    <tr><th>Id</th>
                    <th scope="row">Nome</th>
                    <th scope="row">Login</th>
                    <th scope="row">Tipo</th>
                    </tr>
                </thead>
                <tbody>
        

                    @foreach(Usuario u in Model)
                    {
                        <tr>
                            <td>@u.Id</td>
                            <td>@u.Nome</td>
                            <td>@u.Login</td>
                            
                            @if(@u.Tipo ==Usuario.ADMIN)
                            {
                                <td>Administrador</td>
                            }
                            else{
                                <td>Padrão</td>
                            }

                            <td><a href="/Usuario/EditarUsuario/?Id=@u.Id">Editar</a></td>

                            <td><a href="ExcluirUsuario?Id=@u.Id">Excluir</a></td>
                        </tr>
                    }
                </tbody>
             
                     
        </table>
    </div>
</div>